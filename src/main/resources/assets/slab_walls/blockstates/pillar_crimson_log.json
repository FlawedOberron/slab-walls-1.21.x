{
  "multipart": [
    {
      "apply": {
        "model": "slab_walls:block/pillar/crimson_log/pillar_plinth"
      },
      "when": {
        "down": "true"
      }
    },
    {
      "apply": {
        "model": "slab_walls:block/pillar/crimson_log/pillar_plinth",
        "uvlock": true,
        "x": 180
      },
      "when": {
        "up": "true"
      }
    },
    {
      "apply": {
        "model": "slab_walls:block/pillar/crimson_log/pillar_bottom",
        "uvlock": true
      },
      "when": {
        "bottom": "true"
      }
    },
    {
      "apply": {
        "model": "slab_walls:block/pillar/crimson_log/pillar_bottom",
        "uvlock": true,
        "x": 180
      },
      "when": {
        "top": "true"
      }
    },
    {
      "apply": {
        "model": "slab_walls:block/pillar/crimson_log/pillar_short",
        "uvlock": true
      },
      "when": {
        "bottom": "false"
      }
    },
    {
      "apply": {
        "model": "slab_walls:block/pillar/crimson_log/pillar_short",
        "uvlock": true,
        "x": 180
      },
      "when": {
        "top": "false"
      }
    }
  ]
}